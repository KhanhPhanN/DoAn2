<script>
    for(var i =1; i<=48; i++){
        if($("#t"+i).html()=="<%-time%>"){
            if("<%- title%>"=="Sinh nhật")
            $("#f"+i).attr("style","background-color: <%- colorSinhnhat%>");
            else if("<%- title%>"=="Cuộc họp")
            $("#f"+i).attr("style","background-color: <%- colorCuochop%>");
            else if("<%- title%>"=="Nhắc nhở")
            $("#f"+i).attr("style","background-color: <%- colorNhacnho%>");
            else
            $("#f"+i).attr("style","background-color: #5d95ef");
            $("#f"+i).html("<%- describle%>");
        }
    }
